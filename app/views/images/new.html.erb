<h1>Image Link Form</h1>

<div class="row">
  <% if flash[:error] %>
    <div class="alert"><%= flash[:error] %></div>
  <% end %>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@image, url: images_path) do |f| %>
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control' %>

      <%= f.submit "Submit Image Link", class: "btn btn-primary", id: "Button123" %>
    <% end %>
  </div>
</div>

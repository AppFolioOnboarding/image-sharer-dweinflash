<div class="row">
  <aside class="col-md-4">
    <section class="image_info">
      <h1>
        <% if @image %>
          <%= image_tag @image.url %>
        <% else %>
          No image found!
        <% end %>
      </h1>
      <% if @image %>
        <p>
          Tag: <br>
          <span class="js_image_tag"><%= @image&.tag_list.join(', ') %></span>
        </p>
      <% end %>
    </section>
  </aside>
</div>
